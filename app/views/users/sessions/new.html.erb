<div class='container'>
  <div class='mx-auto'>
    <div class='row'>
      <h3 class='mx-auto my-4'>ログイン</h3>
    </div>
    <div class='row mx-auto'>
      <%= form_with model: @user, url: user_session_path, local: true, class: 'mx-auto col-lg-6 col-md-10 col-sm-12' do |f| %>
      <%= render 'users/shared/error_messages', resource: resource %>

      <div class='form-group row mx-auto'>
        <%= f.label :email, "メールアドレス", class: 'col-lg-4 col-sm-12' %>

        <div class='col-lg-8 col-sm-12'>
          <%=
            f.email_field :email,
            class: 'form-control',
            autofocus: 'true',
            required: '',
            autocomplete: 'email',
            placeholder: "メールアドレス"
          %>
        </div>
      </div>

      <div class='form-group row mx-auto'>
        <div class='col-lg-4 col-sm-12'>
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <div class='col-lg-8 col-sm-12'>
          <%=
            f.password_field :password,
            class: 'form-control',
            autofocus: 'true',
            required: '',
            placeholder: "パスワード"
          %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class='form-field text-center'>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "次回から自動的にログインする" %>
      </div>
      <% end %>


      <div class='form-group text-center mx-auto mt-4'>
        <%= f.submit "ログイン", class: 'btn btn-primary mt-4' %>
      </div>
      <% end %>

    </div>
    <hr>

    <div class='mx-auto text-center'>
      <%= render 'users/shared/links' %>
    </div>

  </div>
</div>