<div class="row">
  <%= form_with model: @post, local: true do |f| %>
    <%= f.select :direction, {"西武新宿方面": 1,  "本川越方面": 2} %>
    <%= f.hidden_field :train_type, value: 0 %>
    <%= f.collection_select :station_id, Station.all, :id, :station_name, prompt:"選択してください", class: "form-control" %>
    <%= f.date_field :date %>
    <%= f.number_field :time %>
    <%= f.select :congestion_level, {"着席できる" => 1, "座れないが立って乗れる" => 2, "座席の前で立てる" => 3, "立っているのがやっと" => 4, "乗り切れないほど混雑している" => 5} %>
    <%= f.text_field :comment %>
    <%= f.submit %>
  <% end %>
</div>
